<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.bhome.rxjava2.MainActivity">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_startservice"
        android:text="开启service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_stopservice"
        android:text="关闭service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/produce_bug"
        android:text="产生bug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/solo_bug"
        android:text="解决bug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Tinker解决方案"
        android:id="@+id/solo_tinker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="看的见我么"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
